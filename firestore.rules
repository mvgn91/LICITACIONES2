
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /contratos/{contratoId} {
      // Allow reading/listing contracts if the user is querying by their own user ID.
      // Allow reading a single document if the user is the owner.
      allow read: if isSignedIn() && (
        (resource == null && request.query.where.userId == request.auth.uid) ||
        (resource != null && resource.data.userId == request.auth.uid)
      );

      // Allow updating/deleting if the user is the owner
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Allow creating a contract if the user is signed in and sets themselves as the owner
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      match /estimaciones/{estimacionId} {
        // A user can interact with estimations if they own the parent contract
        allow read, list, create, update, delete: if isSignedIn() && get(/databases/$(database)/documents/contratos/$(contratoId)).data.userId == request.auth.uid;
      }
    }
  }
}
