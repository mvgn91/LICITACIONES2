
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /contratos/{contratoId} {
      // Allow reading/listing contracts if the user is the owner.
      // For 'get', it checks the resource's data.
      // For 'list', it enforces that the query must include a 'where' clause on userId.
      allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow list: if isSignedIn() && request.query.where.userId == request.auth.uid;

      // Allow updating/deleting if the user is the owner
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Allow creating a contract if the user is signed in and sets themselves as the owner
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      match /estimaciones/{estimacionId} {
        // A user can interact with estimations if they own the parent contract
        allow read, write: if isSignedIn() && get(/databases/$(database)/documents/contratos/$(contratoId)).data.userId == request.auth.uid;
      }
    }
  }
}
